# Docker Environment Configuration
# Copy this file to .env.local and update with your actual values

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-super-secret-key-change-this-in-production-minimum-32-characters

# Google OAuth & Drive API
# Get these from Google Cloud Console
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Database Configuration (Optional - for production)
DATABASE_URL=postgresql://multifamily_user:multifamily_password@postgres:5432/multifamily_db

# Redis Configuration (for WebSocket sessions)
REDIS_URL=redis://redis:6379

# Application Settings
NODE_ENV=production
PORT=3000

# File Storage Settings
UPLOAD_DIR=/app/uploads
OUTPUT_DIR=/app/outputs
STORAGE_DIR=/app/storage

# Security Settings
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Email Configuration (for investor notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# API Keys (Optional)
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Logging
LOG_LEVEL=info